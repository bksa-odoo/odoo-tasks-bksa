<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="commission" />
            </field>
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="before">
                <field name="commission_lines" column_invisible="parent.commission == False"/>
            </xpath>
            <xpath expr="//group[@name='sale_total']" position="replace">
                <group class="oe_subtotal_footer" colspan="2" name="sale_total">
                    <field name="total_commission" widget="monteary"/>
                    <field name="tax_totals" widget="account-tax-totals-field" nolabel="1" colspan="2" readonly="2"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>